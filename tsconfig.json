{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "allowJs": true
  }
}